<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/styles.css" />
    <!-- <script src="js/form.js"></script> -->
    <title><%= title %></title>
  </head>
  <body>
    <!-- login page -->
    <section id="login">
      <div class="container">
        <div class="img-container">
          <img src="../img/cinema.png" alt="cinema logo" />
        </div>
        <div class="form-container">
          <form action="/auth/register" method="post">
            <h1 class="form-title">Register</h1>
            <div class="form-body">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-input"
                name="name"
                id="name"
                placeholder="enter your name"
                required
              />
              <label for="email">Email</label>
              <input
                type="text"
                class="form-input"
                name="email"
                id="email"
                placeholder="enter your email"
                required
              />
              <label for="password">Password</label>
              <input
                type="password"
                name="password"
                id="password"
                class="form-input"
                placeholder="enter you password"
                required
              />
              <input type="submit" class="form-button">
            </div>
          </form>
          <div class="oauth-container">
            <i style="text-align: center; display: block">Register with</i>
            <a href="/auth/google"
              ><img
                class="oauth-img"
                src="../img/google_300221.png"
                alt="gogle image"
            /></a>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
